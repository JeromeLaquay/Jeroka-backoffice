  "description": "API backend pour le dashboard Jeroka - Gestion complÃ¨te PME/TPE",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx --tsconfig tsconfig.dev.json --watch src/server.ts",
    "build": "NODE_OPTIONS='--max-old-space-size=4096' tsc",
    "start": "node dist/server.js",
    "migrate": "tsx src/database/migrate.ts",
    "seed": "tsx src/database/seed.ts",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:dev:down": "docker-compose -f docker-compose.dev.yml down",
    "docker:prod": "docker-compose up --build -d",
    "docker:prod:down": "docker-compose down",
    "test": "jest",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix"
  },
  "keywords": [
    "api",
    "express",
    "postgresql",
    "jwt",
    "typescript",
    "dashboard",
    "backoffice"
